  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "postinstall": "if [ \"$NODE_ENV\" != \"production\" ]; then cp -R libs/* node_modules/; fi",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "3.956.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testcontainers/localstack": "^11.6.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jest-json-schema": "^6.1.5",
    "@types/node": "^25.0.6",
    "dotenv": "^16.4.5",
    "jest": "^30.0.0",
    "jest-json-schema": "^6.1.0",
    "supertest": "^7.0.0",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage"
  }
}
